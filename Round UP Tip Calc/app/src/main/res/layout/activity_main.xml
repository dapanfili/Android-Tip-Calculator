<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="dapdog96.tipcalculator2.MainActivity"

    >


    <EditText
        android:id="@+id/txtBillAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="305dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Tip Percent"
        android:inputType="numberDecimal" />

    <EditText
        android:id="@+id/txtPercent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="333dp"
        android:background="#FFFFFF"
        android:ems="10"
        android:gravity="center"
        android:hint="Enter Tip Amount"
        android:inputType="number" />

    <TextView
        android:id="@+id/lblAmountToTip"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtPercent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="126dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="You Should Tip:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/lblTotal"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblAmountToTip"
        android:layout_alignStart="@+id/lblAmountToTip"
        android:layout_alignLeft="@+id/lblAmountToTip"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="18dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Total:"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txtTotal"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lblTotal"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/lblTotal"
        android:layout_toRightOf="@+id/lblTotal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:numeric="decimal"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnCalculate"
        android:layout_width="111dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btnReset"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="265dp"
        android:background="#2196F3"
        android:text="Submit Totals "
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/txtTip"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/lblTotal"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_toEndOf="@+id/lblTotal"
        android:layout_toRightOf="@+id/lblTotal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:numeric="decimal"
        android:textColor="@android:color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnReset"
        android:layout_width="133dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lblTotal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="#2196F3"
        android:gravity="center"
        android:text="Reset Calculator"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="389dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="193dp"
        android:background="#6FCCC5C5"
        android:gravity="center"
        android:text='Enter Bill Total and Percent You Want To Tip. \nHit "Submit" \nHit "Reset Calculator" To Clear'
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        style="@android:style/Widget.DeviceDefault.Light.TextView"
        android:layout_width="255dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"

        android:shadowColor="#FFFFFF"
        android:shadowDx="1.5"
        android:shadowDy="1.3"
        android:shadowRadius="1.6"
        android:text='The "Round Up" \nTip Calculator'
        android:textColor="@android:color/white"
        android:textSize="30sp" />

</RelativeLayout>
